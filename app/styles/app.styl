@import 'bower_components/nib'

#app-container
  padding-top: 60px

.cover-link
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1

.modal
  $modal-dimensons = 600
  position: fixed
  background: #fff
  height: unit($modal-dimensons, "px")
  width:  unit($modal-dimensons, "px")
  top:    50%
  left:   50%
  margin-left:    -($modal-dimensons / 2)px
  margin-top:     -($modal-dimensons / 2)px
  border-radius:  100%
  box-shadow:     rgba(0,0,0,.5) 0px 0px 17px
  overflow:       hidden
  z-index:        1000000
  
  .top
    width: 100%
    height: 50%
    background-size: cover
    background-repeat: no-repeat
    border-radius: 100% 100% 0 0
    background-position: center center
    
  .bottom
    text-align: center
    padding:    30px
    width:      85%
    margin:     0 auto
    
    h1
      margin:   0
      padding:  0 0 20px
      
    .blade-container
      position: absolute
      bottom: 0
      left:   50%
      height: 100px
      width: 85%
      display: table
      transform: translateX(-50%)
      
      .blade
        display:        table-cell
        width:          50%
        vertical-align: middle
        text-align:     right
        background-size: cover
        background-position: center center
        
        &:nth-of-type(2)
          text-align:   left
          
          a
            padding-left: 10px
        
        a
          display: block
          width: 100%
          height: 100%
          color: #fff
          font-weight: bold
          text-shadow: #000 0px 0px 3px
          line-height: 100px
          padding-right: 10px
          background: transparent
          transition: background 750ms ease
          position: relative
          z-index:  5

          &:hover
            background: rgba(0,0,0,.5)
            
.modal-closer
  background: rgba(red, .5)
  color:      #fff
  width:      60px
  height:     70px
  position:   fixed
  top:        0
  left:       50%
  margin-left: -30px
  border:     none
  font-size:  55px
  z-index:    10000
  line-height: 60px
  text-align: center
  box-shadow:     rgba(0,0,0,.5) 0px 0px 17px
  transition:     transform 500ms ease, background 500ms ease
  span
    display:        block
    transform:      translate3d(0,0,0);
    transform-origin: 20% 50%
    transition:     transform 500ms ease
  
  &:hover
    color: #fff
    background: red
    transform: scale(1.3)
    span
      transform: rotate(-360deg)
  

.icon-nav-container
  &:after
    content: " "
    display: table
    clear: both
    
  .icon-nav
    &.gender
      text-align: right
      
    .item
      display: inline-block
      text-align: center
      padding: 10px
      
      a
        transition: color 500ms ease
        &.active
          color: #ccc
      
      span
        font-size: 10px
        text-transform: uppercase
        
      i
        font-size:  40px
        display:    block